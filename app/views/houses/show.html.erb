<p id="notice"><%= notice %></p>

<p>
  <strong>物件名:</strong>
  <%= @house.name %>
</p>

<p>
  <strong>賃料:</strong>
  <%= @house.price %>円
</p>

<p>
  <strong>住所:</strong>
  <%= @house.location %>
</p>

<p>
  <strong>築年数:</strong>
  <%= @house.age %>年
</p>

<p>
  <strong>備考:</strong>
  <%= @house.remarks %>
</p>

<div>
  <p class="line" style = "border:2px solid #808080;border-bottom:2px">
</div>


<% @house.stations.each.with_index do |station, index| %> 
  <%index += 1%>
  <span style="font-size:20px;  font-weight: bold;"><%="最寄り駅#{index}" %></span>
  <p>
    <strong>路線名:</strong>
    <%= station.route %> 
  </p>

  <p>
    <strong>駅名:</strong>
    <%= station.name %>
  </p>

  <p>
    <strong>徒歩分数:</strong>
    <%= station.time %>分
  </p>
<% end %>

<%= link_to '編集', edit_house_path(@house) %> |
<%= link_to '戻る', houses_path %>

